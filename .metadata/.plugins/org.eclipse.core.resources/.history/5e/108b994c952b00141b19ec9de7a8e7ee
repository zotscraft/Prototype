#include <stdio.h>
#include "include/Prototype.hpp"
#include "include/GameObject.hpp"
#include "include/states/GameStateManager.hpp"
#include "include/states/GameInitState.hpp"
#include <allegro5/allegro.h>

int main(int argc, char **argv) {
	ALLEGRO_DISPLAY *display = NULL;

	if(!al_init()) {
	   fprintf(stderr, "failed to initialize allegro!\n");
	   return -1;
	}

	display = al_create_display(640, 480);
	if(!display) {
	   fprintf(stderr, "failed to create display!\n");
	   return -1;
	}

	al_clear_to_color(al_map_rgb(0,0,0));

	al_flip_display();

	al_rest(2.0);

	al_destroy_display(display);

	GameStateManager state_manager;
	state_manager.Init();

	state_manager.ChangeState(GameInitState::Instance());

	while(state_manager.isRunning()) {
		state_manager.HandleEvents();
		state_manager.Update();
		state_manager.Draw();
	}

	state_manager.Finish();
	return 0;
}

