#include <stdio.h>
#include "include/Prototype.hpp"
#include "include/GameObject.hpp"
#include "include/states/GameStateManager.hpp"
#include "include/states/GameInitState.hpp"
#include <allegro5/allegro.h>

int main(int argc, char **argv) {
	GameManager game_manager;
	game_manager.Init();

	game_manager.ChangeState(GameInitState::Instance());

	while(game_manager.isRunning()) {
		game_manager.HandleEvents();
		game_manager.Update();
		game_manager.Draw();
	}

	game_manager.Finish();
	return 0;
}

